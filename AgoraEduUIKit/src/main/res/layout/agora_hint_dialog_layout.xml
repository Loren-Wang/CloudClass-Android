<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/agora_dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/agora_dialog_background"
    android:elevation="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/agora_hint_icon"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/agora_dialog_hint"
        app:layout_constraintBottom_toBottomOf="@id/agora_dialog_title_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/agora_dialog_title_text"
        app:layout_constraintTop_toTopOf="@id/agora_dialog_title_text" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/agora_dialog_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/agora_dialog_margin_top_large"
        android:textColor="@color/theme_text_color_black"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/agora_dialog_hint_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/agora_hint_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="提示" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/agora_dialog_hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:paddingVertical="@dimen/agora_dialog_margin_top_large"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"
        android:paddingHorizontal="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/agora_dialog_title_text"
        tools:text="老师没来111111111\n老师没来\n老师没来2222222" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/agora_dialog_positive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/agora_dialog_margin_top_large"
        android:background="@drawable/agora_solid_radius_max"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:gravity="center"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="@dimen/dp_5"
        android:textColor="@color/white"
        android:textSize="@dimen/text_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/agora_dialog_hint_text"
        tools:text="知道了" />

</androidx.constraintlayout.widget.ConstraintLayout>