<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/acadsoc_view_stroke_w"
        android:background="@drawable/agora_edu_video_bg">

        <FrameLayout
            android:id="@+id/videoContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            android:background="@drawable/fcr_video_place_holder_corner_bg"
            android:id="@+id/not_in_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/not_in_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/agora_video_img_not_in" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/not_in_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textStyle="bold"
                android:textColor="#022491"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/fcr_video_place_holder_corner_bg"
            android:id="@+id/video_off_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/video_off_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@drawable/agora_video_img_video_off" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/fcr_video_place_holder_corner_bg"
            android:id="@+id/offLine_loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/offLine_loading_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@drawable/agora_video_img_offline_loading" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/fcr_video_place_holder_corner_bg"
            android:id="@+id/no_camera_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/no_camera_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@drawable/agora_video_img_no_camera" />

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/fcr_video_place_holder_corner_bg"
            android:id="@+id/camera_disable_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/camera_disable_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:src="@drawable/agora_video_img_camera_disable" />

            </LinearLayout>

        <RelativeLayout
            android:id="@+id/options_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/agora_video_options_layout_margin"
            android:layout_marginTop="@dimen/agora_video_options_layout_margin"
            android:layout_marginEnd="@dimen/agora_video_options_layout_margin"
            android:layout_marginBottom="@dimen/agora_video_options_layout_margin">

            <LinearLayout
                android:id="@+id/trophy_Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/agora_video_ic_trophy" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/trophy_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/agora_video_trophy_text_margin_start"
                    android:layout_marginLeft="@dimen/agora_video_trophy_text_margin_start"
                    android:shadowColor="@color/agora_video_trophy_text_shadow_color"
                    android:shadowDx="@dimen/agora_video_text_shadow_dx"
                    android:shadowDy="@dimen/agora_video_text_shadow_dy"
                    android:shadowRadius="@dimen/agora_video_text_shadow_radius"
                    android:text="X99"
                    android:textColor="@color/theme_white"
                    android:textSize="@dimen/agora_video_trophy_text_size" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/audio_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/agora_video_name_margin_start"
                android:layout_marginRight="@dimen/agora_video_name_margin_start"
                android:visibility="gone"
                android:src="@drawable/agora_video_ic_audio_bg" />

            <RelativeLayout
                android:id="@+id/videoName_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/video_ic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/agora_video_name_margin_start"
                    android:layout_marginLeft="@dimen/agora_video_name_margin_start"
                    android:src="@drawable/agora_video_ic_video_bg"
                    android:visibility="invisible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/name_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/agora_video_name_text_h"
                    android:layout_alignTop="@id/video_ic"
                    android:layout_alignBottom="@id/video_ic"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/agora_video_name_margin_start"
                    android:layout_marginLeft="@dimen/agora_video_name_margin_start"
                    android:layout_toEndOf="@id/video_ic"
                    android:layout_toRightOf="@id/video_ic"
                    android:autoSizeMaxTextSize="@dimen/text_size_small"
                    android:autoSizeMinTextSize="@dimen/text_size_smallest"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeTextType="uniform"
                    android:ellipsize="end"
                    android:gravity="center_vertical|start|left"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:shadowColor="@color/agora_video_trophy_text_shadow_color"
                    android:shadowDx="@dimen/agora_video_text_shadow_dx"
                    android:shadowDy="@dimen/agora_video_text_shadow_dy"
                    android:shadowRadius="@dimen/agora_video_text_shadow_radius"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/theme_white"
                    android:textSize="@dimen/agora_video_name_text_size" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/boardGranted_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/margin_smaller"
                android:layout_marginRight="@dimen/margin_smaller"
                android:layout_toLeftOf="@+id/audio_ic"
                android:src="@drawable/agora_video_ic_board_granted"
                android:visibility="invisible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/hand_waving_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="bottom|center"
            android:visibility="gone">

            <com.opensource.svgaplayer.SVGAImageView
                android:id="@+id/hand_waving_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                app:autoPlay="true"
                app:clearsAfterStop="true"
                app:fillMode="Backward"
                app:loopCount="10" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>