<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_191919"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_active_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/acadsoc_theme_color_first"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.agora.edu.component.AgoraEduHeadComponent
            android:id="@+id/agora_class_head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/agora_class_head_h"
            android:layout_marginBottom="@dimen/agora_class_margin"
            android:gravity="center"
            android:textColor="@android:color/holo_green_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/whiteboard_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/agora_class_head_h"
            android:layout_marginStart="@dimen/agora_class_1v1_group_right_dis"
            android:background="@drawable/acadsoc_white_board_area_bg"
            android:padding="@dimen/acadsoc_view_stroke_w"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/agora_class_head">

            <com.agora.edu.component.whiteboard.AgoraEduWhiteBoardComponent
                android:id="@+id/agora_edu_whiteboard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/agora_class_rect_line_bg"
                android:padding="1dp" />

            <com.agora.edu.component.teachaids.component.AgoraEduTeachAidContainerComponent
                android:id="@+id/teachAid_Container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="start|bottom"
                android:orientation="horizontal">

                <com.agora.edu.component.options.AgoraEduOptionsComponent
                    android:id="@+id/agora_edu_options"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:layout_marginLeft="@dimen/agora_class_options_margin"
                    android:layout_marginBottom="@dimen/agora_class_options_margin" />

                <FrameLayout
                    android:id="@+id/agora_edu_options_item_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    tools:background="#0f0"
                    android:layout_marginBottom="2dp"
                    tools:layout_height="100dp"
                    tools:layout_width="46dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/video_logo_container"
            android:layout_width="@dimen/agora_class_1v1_group_w"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/agora_class_head_h"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.agora.edu.component.AgoraEduVideoGroupComponent
                android:id="@+id/videoGroup"
                android:layout_width="@dimen/agora_class_1v1_group_w"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/acadsoc_logo_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:videoMode="Pair" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/acadsoc_logo_img"
                android:layout_width="@dimen/agora_class_1v1_group_w"
                android:layout_height="@dimen/acadsoc_logo_height"
                android:paddingVertical="@dimen/padding_small"
                android:scaleType="fitCenter"
                android:src="@drawable/acadsoc_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
               />

        </androidx.constraintlayout.widget.ConstraintLayout>
